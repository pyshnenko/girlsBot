    "/girls/api/calendar": {
      "get": {
        "tags": [
          "actions"
        ],
        "summary": "Запрос календаря",
        "description": "календарь",
        "operationId": "calendar",
        "responses": {
          "200": {
            "description": "Выполнено"
          },
          "401": {
            "description": "id incorrect"
          }
        },
        "security": [
          {
            "B_auth": []
          }
        ]
      },
      "post": {
        "tags": [
          "actions"
        ],
        "summary": "добавить или исправить даты",
        "description": "задать или скорректировать даты, в которые пользователь свободен или занят",
        "operationId": "calendaradd",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "freeDays": {
                    "type": "array",
                    "items": {
                      "type": "number",
                      "example": [
                        1,
                        2,
                        3
                      ]
                    }
                  },
                  "busyDays": {
                    "type": "array",
                    "items": {
                      "type": "number",
                      "example": [
                        4,
                        5
                      ]
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Выполнено"
          },
          "401": {
            "description": "id incorrect"
          }
        },
        "security": [
          {
            "B_auth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "users": {
        "type": "object",
        "properties": {
          "tgid": {
            "type": "number",
            "example": 123456789
          },
          "is_bot": {
            "type": "boolean",
            "example": false
          },
          "first_name": {
            "type": "string",
            "example": "fname"
          },
          "last_name": {
            "type": "string",
            "example": "lname"
          },
          "username": {
            "type": "string",
            "example": "username"
          },
          "language_code": {
            "type": "string",
            "example": "lcode"
          },
          "register": {
            "type": "boolean",
            "example": false
          },
          "is_admin": {
            "type": "boolean",
            "example": false
          }
        }
      },
      "events": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "название события"
          },
          "fullText": {
            "type": "string",
            "example": "описание события"
          },
          "date": {
            "type": "string",
            "example": "2025-09-25T00:00:00.000Z"
          },
          "place": {
            "type": "string",
            "example": "место проведения"
          },
          "link": {
            "type": "string",
            "example": "место проведения"
          },
          "users": {
            "type": "array",
            "description": "список пользователей, подтвердивших участие",
            "items": {
              "type": "number",
              "example": 123321
            }
          }
        }
      }
    },
    "securitySchemes": {
      "B_auth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}