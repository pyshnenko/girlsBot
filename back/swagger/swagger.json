        "operationId": "updGirls",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "tgid изменяемого пользователя",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/users"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Выполнено"
          },
          "401": {
            "description": "you not admin"
          },
          "402": {
            "description": "incorrect user data"
          }
        },
        "security": [
          {
            "B_auth": []
          }
        ]
      },
      "delete": {
        "tags": [
          "users"
        ],
        "summary": "удаление пользователя",
        "description": "добавляем пользователя в наш лист",
        "operationId": "delGirls",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "telegramID удаляемого пользователя",
            "required": true,
            "explode": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Выполнено"
          },
          "401": {
            "description": "you not admin"
          },
          "402": {
            "description": "incorrect user data"
          }
        },
        "security": [
          {
            "B_auth": []
