    "/girls/api/eventsYN/{id}": {
      "put": {
        "tags": [
          "events"
        ],
        "summary": "согласие/отказ от события",
        "description": "соглашаемся или отказываемся от участия в событии",
        "operationId": "YoNEvent",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "req",
            "in": "query",
            "required": true,
            "schema": {
              "enum": [
                true,
                false
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Выполнено"
